{
  "name": "@candy-doc/ui",
  "version": "1.0.1",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "src/components/**/*.ts",
    "src/assets",
    "tailwind.config.js"
  ],
  "scripts": {
    "build-style": "node tasks/build-styles.js",
    "watch-style": "nodemon",
    "storybook": "start-storybook -p 6006",
    "dev": "concurrently --kill-others \"npm:watch-style\" \"npm:storybook\"",
    "prebuild": "npm run build-style",
    "build": "build-storybook",
    "format": "prettier  --check .",
    "format-fix": "prettier --write .",
    "lint": "eslint --ext .cjs,.js,.ts,.json .",
    "lint-fix": "eslint --fix --ext .cjs,.js,.ts,.json .",
    "prepublishOnly": "npm run build-style"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^6.1.1",
    "@storybook/addon-a11y": "next",
    "@storybook/addon-actions": "next",
    "@storybook/addon-essentials": "next",
    "@storybook/addon-interactions": "next",
    "@storybook/addon-links": "next",
    "@storybook/builder-vite": "latest",
    "@storybook/testing-library": "^0.0.11",
    "@storybook/web-components": "next",
    "@tailwindcss/forms": "^0.5.0",
    "@tailwindcss/typography": "^0.5.2",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "autoprefixer": "^10.4.4",
    "chromatic": "^6.5.4",
    "concurrently": "^7.1.0",
    "cssnano": "^5.1.7",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-lit": "^1.6.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-storybook": "^0.5.11",
    "eslint-plugin-wc": "^1.3.2",
    "glob": "^8.0.1",
    "nodemon": "^2.0.15",
    "postcss": "^8.4.12",
    "sass": "^1.50.1",
    "tailwindcss": "^3.0.23",
    "typescript": "^4.6.3",
    "vite": "^2.8.6"
  },
  "dependencies": {
    "lit": "^2.2.2"
  },
  "volta": {
    "node": "16.14.2",
    "yarn": "1.22.18"
  }
}
